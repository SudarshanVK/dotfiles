// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
    /* Duplicated key auto-commented: "agent": {
        "provider": "copilot"
    }, */
    "context_servers": {
        
    },
    "vim_mode": true,
    "icon_theme": "Material Icon Theme",
    "edit_predictions": {
        "disabled_globs": [],
        "mode": "eager",
        "enabled_in_text_threads": true
    },
    "ssh_connections": [
        {
            "host": "svkubuntu",
            "username": "svk",
            "projects": [
                {
                    "paths": [
                        "~/all_labs"
                    ]
                },
                {
                    "paths": [
                        "~/testenv"
                    ]
                }
            ]
        },
        {
            "host": "vagrantlab.lab.unimelb.net.au",
            "projects": [
                {
                    "paths": [
                        "~/lab"
                    ]
                }
            ]
        },
        {
            "host": "vagrant4",
            "username": "ubuntu",
            "projects": [
                {
                    "paths": [
                        "~/NetLab"
                    ]
                }
            ]
        }
    ],
    "remove_trailing_whitespace_on_save": true,
    "theme": "Catppuccin Frapp√©",
    "ui_font_size": 17,
    "ui_font_family": "Dank Mono",
    "ui_font_features": {
        "calt": true
    },
    "buffer_font_size": 16,
    "buffer_line_height": "comfortable",
    "buffer_font_family": "Dank Mono",
    "buffer_font_fallbacks": [
        "Dank Mono"
    ],
    "autosave": "on_focus_change",
    "confirm_quit": false,
    "base_keymap": "VSCode",
    // "load_direnv": "direct",
    "current_line_highlight": "gutter",
    "cursor_shape": "bar",
    "scrollbar": {
        "show": "auto",
        "cursors": true,
        "git_diff": true,
        "search_results": true,
        "selected_symbol": true,
        "diagnostics": "all"
    },
    "tab_bar": {
        "show": true,
        "show_nav_history_buttons": false
    },
    "tabs": {
        "close_position": "right",
        "file_icons": true,
        "git_status": true,
        "activate_on_close": "history"
    },
    "toolbar": {
        "breadcrumbs": true,
        "quick_actions": false
    },
    "enable_language_server": true,
    "ensure_final_newline_on_save": true,
    "format_on_save": "on",
    "formatter": "language_server",
    "use_autoclose": true,
    "git": {
        "git_gutter": "tracked_files",
        "inline_blame": {
            "enabled": true
        }
    },
    "indent_guides": {
        "enabled": true,
        "line_width": 1,
        "active_line_width": 1,
        "coloring": "indent_aware",
        "background_coloring": "disabled"
    },
    "hard_tabs": false,
    "search": {
        "whole_word": false,
        "case_sensitive": false,
        "include_ignored": false,
        "regex": false
    },
    "show_edit_predictions": true,
    "show_completions_on_input": true,
    "soft_wrap": "preferred_line_length",
    "show_wrap_guides": false,
    "preferred_line_length": 120,
    "tab_size": 4,
    "terminal": {
        "shell": {
            "program": "zsh"
        },
        "alternate_scroll": "off",
        "blinking": "terminal_controlled",
        "copy_on_select": true,
        "dock": "bottom",
        "detect_venv": {
            "on": {
                "directories": [
                    ".venv",
                    "venv",
                    "env"
                ],
                "activate_script": "default"
            }
        },
        "font_family": "JetBrainsMono Nerd Font Mono",
        "font_features": {},
        "font_size": 15,
        "line_height": "comfortable",
        "option_as_meta": false,
        "button": false,
        "working_directory": "current_project_directory"
    },
    "project_panel": {
        "button": true,
        "default_width": 240,
        "dock": "left",
        "file_icons": true,
        "folder_icons": true,
        "git_status": true,
        "indent_size": 20,
        "auto_reveal_entries": true,
        "auto_fold_dirs": false,
        "scrollbar": {
            "show": "auto"
        }
    },
    "agent": {
        "default_model": {
            "provider": "copilot_chat",
            "model": "claude-sonnet-4.5"
        },
        "model_parameters": []
    },
    "unnecessary_code_fade": 0.5,
    "languages": {
        "YAML": {
            "tab_size": 2
        },
        "Python": {
            "language_servers": [
                "ruff",
                "pyright"
            ],
            "format_on_save": "on",
            "formatter": [
                {
                    "code_action": "source.organizeImports.ruff"
                },
                {
                    "code_action": "source.fixAll.ruff"
                },
                {
                    "language_server": {
                        "name": "ruff"
                    }
                }
            ]
        }
    },
    "extend_comment_on_newline": true,
    "telemetry": {
        // Send debug info like crash reports.
        "diagnostics": false,
        // Send anonymized usage data like what languages you're using Zed with.
        "metrics": false
    },
    "file_types": {
        "C++": [
            "c"
        ],
        "TOML": [
            "MyLockFile"
        ],
        "Dockerfile": [
            "Dockerfile*"
        ],
        "Ansible": [
            "**.ansible.yml",
            "**/defaults/**.yml",
            "**/defaults/**.yaml",
            "**/meta/**.yml",
            "**/meta/**.yaml",
            "**/tasks/**.yml",
            "**/tasks/*.yml",
            "**/tasks/*.yaml",
            "**/handlers/*.yml",
            "**/handlers/*.yaml",
            "**/group_vars/**.yml",
            "**/group_vars/**.yaml",
            "**playbook*.yaml",
            "**playbook*.yml"
        ],
        "yaml": [
            "yaml",
            "yml"
        ],
        "terraform": [
            "tf",
            "tfvars"
        ]
    },
    "features": {
        // Which inline completion provider to use.
        "edit_prediction_provider": "copilot"
    },
    "lsp": {
        "terraform-ls": {
            "initialization_options": {
                "experimentalFeatures": {
                    "validateOnSave": true,
                    "prefillRequiredFields": true
                }
            }
        },
        "ruff": {
            "initialization_options": {
                "settings": {
                    "fixAll": true,
                    "showSyntaxErrors": true,
                    "organizeImports": true,
                    "lineLength": 100
                }
            }
        },
        "pyright": {
            "settings": {
                "python": {
                    "analysis": {
                        "typeCheckingMode": "standard", // "basic", "standard", or "strict"
                        "autoImportCompletions": true,
                        "useLibraryCodeForTypes": true,
                        "diagnosticSeverityOverrides": {
                            "reportMissingImports": "error",
                            "reportOptionalMemberAccess": "warning",
                            "reportOptionalSubscript": "warning",
                            "reportUnusedImport": "warning"
                        }
                    }
                }
            }
        },
        "yaml-language-server": {
            "settings": {
                "yaml": {
                    "keyOrdering": false
                }
            }
        },
        "ansible-language-server": {
            "settings": {
                "ansible": {
                    "path": "ansible"
                },
                "executionEnvironment": {
                    "enabled": false
                },
                "python": {
                    "interpreterPath": "python3"
                },
                "validation": {
                    "enabled": true,
                    "lint": {
                        "enabled": true,
                        "path": "ansible-lint"
                    }
                }
            }
        }
    }
}
