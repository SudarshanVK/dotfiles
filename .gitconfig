[user]
name = Sudarshan V
email = sudarshanv@unimelb.edu.au
	signingkey = ssh-rsa 
[core]
editor = code --wait
pager = delta

[init]
defaultBranch = main

[interactive]
diffFilter = delta --color-only

[delta]
navigate = true # use n and N to move between diff sections
side-by-side = true

# delta detects terminal colors automatically; set one of these to disable auto-detection
# dark = true
# light = true

[merge]
conflictstyle = diff3

[diff]
colorMoved = default
[gpg]
	format = ssh
[gpg "ssh"]
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
[commit]
	gpgsign = true
